<div class="d-flex align-self-start">

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="navbar-brand">
      <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583527320/soma_logo_placeholder_vyxzdx.png" %>
    </div>
  </div>

  <% if !current_user %>
    <div class="flex-fill navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-end">
      <%= link_to "LOGIN", "/users/sign_in", class: 'btn btn-success mr-2' %>
    </div>
  <% else %>
    <div class="flex-fill navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-end">
      <%= link_to "/profile", class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583936213/avatar_ge93np.png" %>
      <% end %>
    </div>
  <% end %>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <i class="fas fa-bars avatar" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
    <div class="ml-2 dropdown dropleft">
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to "Surveys", "#", class: "dropdown-item" %>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Login" , new_user_session_path, class: "dropdown-item"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
