<div class="navbar navbar-expand-sm navbar-light navbar-lewagon nav_bar">
  <div class="navbar-brand">
    <%= link_to '/surveys' do %>
    <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583527320/soma_logo_placeholder_vyxzdx.png" %>
    <% end %>
  </div>
  <% if !current_user %>
    <div class="flex-fill d-flex justify-content-end">
      <%= link_to "LOGIN", "/users/sign_in", class: 'mr-2 btn-green' %>
    </div>
  <% end %>
  <div>

    <% if user_signed_in? %>
      <div id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1584370169/avatar_yqpon5.png", class: 'avatar' %></div>
      
      <div class="ml-2 dropdown dropleft">
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "My Profile", "/profile", class: "dropdown-item" %>
          <% if user_signed_in? %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Login" , new_user_session_path, class: "dropdown-item"  %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
