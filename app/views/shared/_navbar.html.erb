<div class="d-flex align-self-start">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="dropdown">
      <i class="fas fa-bars avatar" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Action", "#", class: "dropdown-item" %>
        <%= link_to "Another action", "#", class: "dropdown-item" %>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Login" , new_user_session_path, class: "dropdown-item"  %>
        <% end %>
      </div>
    </div>
  </div>
      
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583527320/soma_logo_placeholder_vyxzdx.png" %>
    <% end %>
  </div>

  <div class="flex-fill navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-end">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583936213/question_bar_jlrutp.png" %>
    <% end %>

    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583936213/more_options_bdm6xp.png" %>
    <% end %>

    <% if current_user %>
      <%= link_to "/profile", class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583936213/avatar_ge93np.png" %>
      <% end %>
    <% else %>
      <%= link_to "/users/sign_in", class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583936213/avatar_ge93np.png" %>
      <% end %>
    <% end %>
  </div>
</div>
