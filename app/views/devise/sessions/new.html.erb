<div class="container w-50">
  <div class="row">
    <div class="col ">
      <div class="card border-light my-5">
        <div class="card-header text-center" style="background-color: #424874; color: white;"><h2>Log in</h2></div>
          <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs" style="color:#bf96e0;">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.submit "Log in", class: 'btn-login w-100' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
