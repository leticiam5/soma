<%= javascript_tag do %>
  document.querySelector('.nav_bar').remove()
<% end %>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-7 sign-in">
      <div class="row justify-content-center">
        <%= image_tag "https://res.cloudinary.com/dauxxi1io/image/upload/v1583527320/soma_logo_placeholder_vyxzdx.png", class: "logo-sign" %>    
      </div>

      <div class="row justify-content-left">
        <h1 class='mb-3' style="font-size: 2rem;margin-left: 9vh; margin-top: 4vh;">Create Account</h1>
      </div>

     <div class="row justify-content-center">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
             <%= f.error_notification %>
             <%#= f.input :name,
                           required: true,
                           autofocus: true,
                           placeholder: "Full Name or Company Name",
                           label: false,
                           input_html: { autocomplete: "email", style: 'width: 40vw;' } %>
               <%= f.input :email,
                           required: true,
                           autofocus: true,
                           placeholder: "Email",
                           label: false,
                           input_html: { autocomplete: "email", style: 'width: 40vw;' } %>
               <%= f.input :password,
                           required: true,
                           placeholder: "Password",
                           label: false,
                           hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                           input_html: { autocomplete: "new-password", style: 'width: 40vw;' } %>
               <%= f.input :password_confirmation,
                           required: true,
                           placeholder: "Confirm Password",
                           label: false,
                           input_html: { autocomplete: "new-password" , style: 'width: 40vw;'} %>
               <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="row justify-content-center">
            <%= f.button :submit, "Create Account", class:"btn-sign-up-green" %>
          <% end %>
          </div>
        

  </div>
</div>
