<div class="container w-50">
  <div class="row">
    <div class="col ">
      <h1 class='m-3 form'>
        <%= @survey.title %>
      </h1>
      <% @survey.questions.each do |question| %>
        <%= simple_form_for [question, Answer.new(survey_answer: @survey_answer)], remote: true do |fa| %>
          <p><%= question.content %></p>
          <%= fa.input :content %>
          <%= fa.submit 'Submit Survey' %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
